<!DOCTYPE html>
<html>
<head>
	<title>Blog</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

</head>
<body>
	<div class="container">
		<h1 class="mb-4">Blog Article</h1>
		<a href="/articles/new" class="btn btn-success">New Article</a>
		<% articles.forEach(article => { %>
			<div class="card mt-4">
				<div class="card-body">
					<h4><div class="card-title"><%= article.title %></div></h4>
					<div class="card-subtitle text-muted mb-2">
						<%= article.createdAt.toLocaleString() %>
					</div>
						<div class="card-text mb-2"><%= article.description %></div>
						<a href="articles/<%= article.slug %>" class="btn btn-primary">More Info</a>
						<a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
						<form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
							<button type="submit" class="btn btn-danger">Delete</button>
						</form>
				</div>				
			</div>
		<% }) %>
	</div>	
</body>
</html>